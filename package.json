{
  "name": "nuxt3-ssr-firebase",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "nuxt build",
    "postbuild": "npm run test",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "nuxt prepare",
    "build:firebase": "npm run build -- --preset=firebase",
    "preemulator": "npm run build:firebase",
    "emulator": "firebase emulators:start",
    "predeploy": "npm run build:firebase",
    "deploy": "npx firebase-tools deploy",
    "clear": "rm -rf .nuxt .output .firebase coverage *.log",
    "clear-all": "npm run clear && rm -rf node_modules package-lock.json",
    "upgrade": "npx npm-check-updates -u && npm i",
    "upgrade:nuxi": "npx nuxi upgrade --force",
    "analyze": "npx nuxi analyze"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.9.3",
    "@heroicons/vue": "^2.2.0",
    "@iconify-json/emojione": "^1.2.0",
    "@iconify-json/simple-icons": "^1.2.12",
    "@nuxt/eslint": "^0.7.1",
    "@nuxt/image": "^1.8.1",
    "@nuxt/test-utils": "^3.14.4",
    "@nuxt/ui-pro": "^1.5.0",
    "@nuxtjs/i18n": "^9.1.0",
    "@nuxtjs/sitemap": "^7.0.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.1.5",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/nuxt": "^11.3.0",
    "autoprefixer": "^10.4.20",
    "browser-image-compression": "^2.0.2",
    "country-state-city": "^3.2.1",
    "firebase": "^11.0.2",
    "firebase-admin": "^13.0.1",
    "firebase-functions": "^6.1.1",
    "happy-dom": "^15.11.6",
    "nuxt": "^3.14.1592",
    "nuxt-gtag": "^3.0.2",
    "postcss": "^8.4.49",
    "slugify": "^1.6.6",
    "uuid": "^11.0.3",
    "vitest": "^2.1.5",
    "vue": "^3.5.13",
    "vue-router": "^4.4.5",
    "zod": "^3.23.8"
  }
}
